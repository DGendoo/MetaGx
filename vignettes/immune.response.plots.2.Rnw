\noindent Survival by the Tothill subtypes (using our implementation of their subtype classifer described in Helland et al.)
<<Gene2_survival_Helland_subtypes>>=

par(mfrow=c(2,2))
for(current.helland.subtype in levels(survival.df.2$Helland.subtypes)) {
  cases.to.include <- survival.df.2$Helland.subtypes == current.helland.subtype
  surv.time <- survival.df.2$years_to_event[cases.to.include]
  surv.event <- survival.df.2$event_status[cases.to.include]
  groups <- survival.df.2[,paste0(gene.names[2], ".quantile")][cases.to.include]
  risk.vals <- -survival.df.2[,paste0(gene.names[2], ".expression")][cases.to.include]
  group.names <- paste(gene.names[2], levels(survival.df.2[,paste0(gene.names[2], ".quantile")][cases.to.include]))
  datasets <- survival.df.2$data.source[cases.to.include]
  main.title <- paste("Survival:", gene.names[2], "in subtype", current.helland.subtype)
  
  create.survival.plot(
    surv.time = surv.time,
    surv.event = surv.event,
    groups = groups,
    risk.vals = risk.vals,
    group.names = group.names,
    datasets = datasets,
    xlab = "Time (years)",
    main = main.title,
    time.cens=10,
    stats.to.show = c("n", "p", "d")
  )
}
