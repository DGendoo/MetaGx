surv.time <- survival.data.individual.genes[[2]]$years_to_event
surv.event <- survival.data.individual.genes[[2]]$event_status
groups <- survival.data.individual.genes[[2]][,paste0(gene.names[2], ".quantile")]
risk.vals <- -survival.data.individual.genes[[2]][,paste0(gene.names[2], ".expression")]
group.names <- paste(gene.names[2], levels(survival.data.individual.genes[[2]][,paste0(gene.names[2], ".quantile")]))
datasets <- survival.data.individual.genes[[2]]$data.source
main.title <- paste("Survival:", gene.names[2])

stat.objects.survplot <- create.survival.plot(
  surv.time = surv.time,
  surv.event = surv.event,
  groups = groups,
  risk.vals = risk.vals,
  group.names = group.names,
  datasets = datasets,
  xlab = "Time (years)",
  main = main.title,
  time.cens=10,
  stats.to.show = c("n", "p", "d")
)
