\pagebreak
\section{\Sexpr{gene.names[2]}}

<<Gene2_load_data>>=
esets.with.gene <- esets[sapply(esets, function(x) entrez.ids[2] %in% fData(x)$EntrezGene.ID)]

pooled.eset.with.gene.2 <- datasetMerging(esets.with.gene)

survival.df.2 <- get.survival.data.for.plotting(pooled.eset.with.gene.2, entrez.ids=entrez.ids[2], num.quantiles=3, survival.type="overall.survival", time.unit="years", gene.name.as.output.colname=TRUE, additional.colnames.to.keep = c("Helland.subtypes", "Verhaak.subtypes", "Bentink.Haibe.Kains.subtypes"))
@

\noindent Expression values for \Sexpr{gene.names[2]} were present in \Sexpr{nrow(survival.df.2)} patients from \Sexpr{length(unique(survival.df.2$data.source))} datasets.
<<Gene2_dataset_table, results='asis'>>=
print(.get.ordered.data.table(survival.df.2$data.source), include.rownames=FALSE)
@

<<Gene2_survival_all, fig.width=5, fig.height=5, out.width="0.6\\textwidth">>=
surv.time <- survival.df.2$years_to_event
surv.event <- survival.df.2$event_status
groups <- survival.df.2[,paste0(gene.names[2], ".quantile")]
risk.vals <- -survival.df.2[,paste0(gene.names[2], ".expression")]
group.names <- paste(gene.names[2], levels(survival.df.2[,paste0(gene.names[2], ".quantile")]))
datasets <- survival.df.2$data.source
main.title <- paste("Survival:", gene.names[2])

stat.objects.survplot <- create.survival.plot(
  surv.time = surv.time,
  surv.event = surv.event,
  groups = groups,
  risk.vals = risk.vals,
  group.names = group.names,
  datasets = datasets,
  xlab = "Time (years)",
  main = main.title,
  time.cens=10,
  stats.to.show = c("n", "p", "d")
)
@
